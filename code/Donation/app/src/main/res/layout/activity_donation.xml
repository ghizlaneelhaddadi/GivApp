<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".DonationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/blue"
            android:text="Faire une donation"
            app:drawableStartCompat="@drawable/back" />
    </androidx.appcompat.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/edittext"
            android:backgroundTint="@color/gray"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                />
                <TextView
                    android:id="@+id/nom"
                    android:layout_width="130dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="17sp"
                    android:fontFamily="@font/bold"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/regular"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>
    <LinearLayout
        android:background="@drawable/edittext"
        android:backgroundTint="@color/gray"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/bold"
            android:text="veuillez déplacer le curseur vers le montant souhaité"
            android:textColor="@color/blue"
            android:textStyle="bold" />
        <!-- slider lors de passer le doigt il cahnge la valeur de text en desous avec l'id mon-->
        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:valueFrom="10"
            android:valueTo="10000"
            style="@style/CustomSliderStyle"
            app:haloColor="@color/blue"
            app:haloRadius="20dp"
            android:contentDescription="Sélecteur de valeur"
            app:thumbColor="@color/white"
            app:thumbElevation="10dp"
            app:thumbHeight="20dp"
            app:thumbRadius="20sp"
            app:thumbStrokeColor="@color/blue"
            app:thumbStrokeWidth="10dp"
            app:thumbTrackGapSize="15dp"
            app:thumbWidth="20dp" />
    </LinearLayout>
        <!--recuperer depuis slider -->

        <TextView
            android:id="@+id/mon"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    <LinearLayout
        android:background="@drawable/edittext"
        android:backgroundTint="@color/gray"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/bold"
            android:text="veuillez choisir le mode de payment"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <!--le choix de radiobutton va afficher le formulaire adequat -->
        <RadioGroup
            android:id="@+id/payment_methods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="10dp"
                android:fontFamily="@font/regular"
                android:textStyle="italic"
                android:layout_margin="10dp"
                android:drawablePadding="20dp"
                android:drawableTop="@drawable/crcard"
                android:padding="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Credit Card" />

            <RadioButton
                android:id="@+id/rb_paypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textStyle="italic"
                android:layout_margin="10dp"
                android:drawablePadding="5dp"
                android:textSize="10dp"
                android:fontFamily="@font/regular"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/pay"
                android:padding="15dp"
                android:text="PayPal" />
            <RadioButton
                android:id="@+id/rb_google_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="10dp"
                android:fontFamily="@font/regular"
                android:textStyle="italic"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/gpay"
                android:padding="10dp"
                android:text="Google Pay" />
        </RadioGroup>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_credit_card"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/error_all_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="10dp"
                android:visibility="gone"
                android:text="Tous les champs sont requis*"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Numéro de carte"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <!-- les infos sont inseres dans la base de donnée Firestore avec le nom donation et chaque mode de payment va etre un child abev le nom de mode de payment -->
                <EditText
                    android:id="@+id/cardnum"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/regular"
                    android:inputType="number"
                    android:background="@drawable/edittext"
                    android:drawableEnd="@drawable/card"
                    android:hint="1234 5678 9012 3456"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/error_cardnum"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:text="Numéro de carte invalide, 16 digits requis"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Date d'expiration"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/bold"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/expiredate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:inputType="date"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/edittext"
                    android:drawableEnd="@drawable/calendar"
                    android:hint="MM/YY"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/error_expiredate"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:text="Date d'expiration invalide"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Code de sécurité"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/securitycode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/edittext"
                    android:drawableEnd="@drawable/number"
                    android:hint="3 nombres"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/error_securitycode"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:text="Code de sécurité non valide"/>
            </LinearLayout>

            <Button
                android:id="@+id/carte_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bold"
                android:backgroundTint="@color/blue"
                android:padding="16dp"
                android:text="completez le payment"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_paypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bold"
                    android:text="Adresse email Paypal"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/paypal_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/regular"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext"
                    android:drawableEnd="@drawable/email"
                    android:hint="Entrer votre adresse email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />
                <TextView
                    android:id="@+id/error_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:text="Veuillez entrer un email valide"/>
            </LinearLayout>

            <Button
                android:id="@+id/paypal_pay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue"
                android:padding="16dp"
                android:fontFamily="@font/bold"

                android:text="Payer avec Paypal"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/google_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <Button
                android:id="@+id/google_pay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/blue"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:text="Payer avec Google Pay" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
