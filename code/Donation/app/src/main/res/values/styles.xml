<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorActive">@color/blue</item>
        <item name="trackColorInactive">@color/gray</item>
        <item name="thumbColor">@color/blue</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="haloColor">@color/blue</item>
    </style>
    <style name="CustomAppBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="backgroundColor">@color/blue</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
    <item name="colorPrimary">@color/blue</item>
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:radius">20dp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:background">@color/white</item>
    <item name="android:textSize">16sp</item>
    </style>
    <style name="NoAnimationStyle">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    <style name="FontStyle">
        <item name="android:fontFamily">@font/regular</item>
        <!-- Add other font-related attributes if needed -->
    </style>
    <style name="StatusBarStyle" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Add other status bar related attributes if needed -->
    </style>

</resources>